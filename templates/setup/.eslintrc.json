{
	"root": true,
	"env": {
		"node": true,
		"es6": true
	},
    "parserOptions": {
        "ecmaVersion": 2022,
		"sourceType": "module"
    },
    "extends": "eslint:recommended",
	"rules": {
		"block-scoped-var": 2,
		"guard-for-in": 0,
		"no-case-declarations": 0,
		"no-else-return": 2,
		"no-eval": 2,
		"no-extend-native": 2,
		"no-extra-bind": 2,
		"no-extra-label": 2,
		"no-implicit-coercion": 2,
		"no-invalid-this": 2,
		"no-lone-blocks": 2,
		"no-loop-func": 2,
		"no-multi-spaces": 2,
		"no-new": 2,
		"no-new-func": 2,
		"no-new-wrappers": 2,
		"no-unused-vars": 1,
		"no-unmodified-loop-condition": 2,
		"no-useless-call": 2,
		"prefer-promise-reject-errors": 2,
		"radix": 2,
		"require-await": 2,
		"vars-on-top": 2,
		"yoda": 2,
		"wrap-iife": [2,"outside"],
		"strict": [2, "global"],
		"no-label-var": 2,
		"no-use-before-define": [2, { "functions": true, "classes": true }],
		"brace-style": 2,
		"comma-dangle": 2,
		"no-fallthrough": 0
	}
}
